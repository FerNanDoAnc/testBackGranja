{
  "compilerOptions": { 
    "experimentalDecorators": true, 
    
    "target": "es5",
   "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // "strict": true,
    // "noImplicitAny": true,
    // "strictNullChecks": true,

  },
  "include": [
    "src",
    "src/**/*",
    "scripts/**/*"
  ],
  "entities": [
    "dist/**/*.entity{.ts,.js}", 
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
   ]
}
